<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <!-- Table and index definitions -->

  <changeSet author="d.ellermann@amc-world.de" id="20160916-1">
    <createTable tableName="search_data">
      <column name="content" type="longtext">
        <constraints nullable="false"/>
      </column>
      <column name="content_structured" type="longtext">
        <constraints nullable="false"/>
      </column>
      <column name="record_id" type="bigint">
        <constraints nullable="false"/>
      </column>
      <column name="record_title" type="text">
        <constraints nullable="false"/>
      </column>
      <column name="type" type="varchar(100)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey tableName="search_data" constraintName="search_dataPK"
      columnNames="type, record_id"/>
  </changeSet>
</databaseChangeLog>
