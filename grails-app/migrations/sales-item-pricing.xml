<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">

  <!-- Table definitions -->

  <changeSet author="d.ellermann@amc-world.de" id="20120731-1">
    <createTable tableName="sales_item_pricing">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true"
          primaryKeyName="sales_item_prPK" />
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false" />
      </column>
      <column name="adjustment" type="decimal(19,2)" />
      <column name="discount_percent" type="decimal(19,2)" />
      <column name="name" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="quantity" type="decimal(19,2)">
        <constraints nullable="false" />
      </column>
      <column name="unit" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="unit_price" type="decimal(19,2)" />
    </createTable>
    <createTable tableName="sales_item_pricing_item">
      <column autoIncrement="true" name="id" type="bigint">
        <constraints nullable="false" primaryKey="true"
          primaryKeyName="sales_item_prPK" />
      </column>
      <column name="version" type="bigint">
        <constraints nullable="false" />
      </column>
      <column name="name" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="pricing_id" type="bigint">
        <constraints nullable="false" />
      </column>
      <column name="quantity" type="decimal(19,2)">
        <constraints nullable="false" />
      </column>
      <column name="rel_to_pos" type="integer" />
      <column name="type" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="unit" type="varchar(255)">
        <constraints nullable="false" />
      </column>
      <column name="unit_percent" type="decimal(19,2)" />
      <column name="unit_price" type="decimal(19,2)" />
      <column name="items_idx" type="integer" />
    </createTable>
    <addColumn tableName="sales_item">
      <column name="pricing_id" type="bigint">
        <constraints nullable="true" />
      </column>
    </addColumn>
    <addForeignKeyConstraint baseColumnNames="pricing_id"
      baseTableName="sales_item_pricing_item" constraintName="FK303CD25DCF64401"
      deferrable="false" initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="sales_item_pricing"
      referencesUniqueColumn="false" />
    <addForeignKeyConstraint baseColumnNames="pricing_id"
      baseTableName="sales_item" constraintName="FK6669B266DCF64401"
      deferrable="false" initiallyDeferred="false"
      referencedColumnNames="id" referencedTableName="sales_item_pricing"
      referencesUniqueColumn="false" />
    <createIndex indexName="FK6669B266DCF64401" tableName="sales_item">
      <column name="pricing_id" />
    </createIndex>
    <createIndex indexName="name" tableName="sales_item">
      <column name="name" />
    </createIndex>
    <createIndex indexName="FK303CD25DCF64401" tableName="sales_item_pricing_item">
      <column name="pricing_id" />
    </createIndex>
  </changeSet>
</databaseChangeLog>
